.page-header
  %h1= @trip.destination

%p
  %strong= Trip.human_attribute_name(:started_at) + ':'
  %br
  = @trip.started_at
%p
  %strong= Trip.human_attribute_name(:ended_at) + ':'
  %br
  = @trip.ended_at
%p
  %strong= Trip.human_attribute_name(:destination) + ':'
  %br
  = @trip.destination
%p
  %strong= Trip.human_attribute_name(:member_count) + ':'
  %br
  = @trip.member_count
%p
  %strong= Trip.human_attribute_name(:members) + ":"
  %br
  = render @trip.members
  .member-actions
    = render 'members/new', trip: @trip



= link_to t('.back', :default => t("helpers.links.back")), trips_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_trip_path(@trip), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), trip_path(@trip), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
