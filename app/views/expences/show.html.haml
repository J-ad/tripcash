.page-header
  %h1=t '.title', :default => Expence.model_name.human.titleize
= link_to t('.back', :default => t("helpers.links.back")), expences_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_expence_path(@expence), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), expence_path(@expence), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
