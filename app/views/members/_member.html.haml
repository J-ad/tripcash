.col-md-4
  .member-card-square.mdl-card.mdl-shadow--2dp
    .mdl-card__title.mdl-card--expand
      %h2.mdl-card__title-text= member.full_name + ' wydatki: ' + member.sum_expences(@trip.id).to_s
      = render 'expences/new', trip: @trip, member: member
    .mdl-card__actions.mdl-card--border
      %a.mdl-button.mdl-button--colored.mdl-js-button.mdl-js-ripple-effect
        View Updates
