= simple_form_for @member, html: { class: "form form-horizontal member" } do |f|
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.input :name
    .col-lg-offset-2.col-lg-10
      = f.button :submit ,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), members_path, :class => 'btn btn-default'
